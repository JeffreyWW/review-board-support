<idea-plugin version="2">
  <id>com.guyazhou.tools.plugin.reviewboard4intellij</id>
  <name>Reviewboard plugin for intelliJ</name>
  <version>1.0</version>
  <vendor email="asiaon123@gmail.com" url="http://www.guyazhou.com">www.guyazhou.com</vendor>

  <description><![CDATA[
      A reviewboard plugin for intelliJ idea, helping post review to reviewboard server.
      <br>
      Issues: <a href="https://github.com/asiaon123/ReviewBoardPlugin4IntelliJ/issues">Report issues</a>
      <br>
      Github: <a href="https://github.com/asiaon123/ReviewBoardPlugin4IntelliJ">https://github.com/asiaon123/ReviewBoardPlugin4IntelliJ</a>
      <br>
      Thanks: @kaneg
      <h4>Feature:</h4>
        <li>Support svn, Git(TODO)</li>
        <li>"Bang" function</li>
    ]]>
  </description>

  <change-notes><![CDATA[
      <h4>1.1.0</h4>
        <li>"Bang" function online now</li>
      <h4>1.0.0 - initial version</h4>
        <li>Baic functions</li>
    ]]>
  </change-notes>

  <idea-version since-build="145.0"/>

  <depends>Subversion</depends>
  <depends>Git4Idea</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.guyazhou.tools.plugin.reviewboard.setting.ReviewBoardSetting" />
    <applicationConfigurable instance="com.guyazhou.tools.plugin.reviewboard.setting.ReviewBoardSetting" />
  </extensions>

  <actions>
    <action id="ReviewAction" class="com.guyazhou.tools.plugin.reviewboard.action.ReviewAction" text="Pre-commit" description="ReviewAction">
      <add-to-group group-id="ChangesViewPopupMenu" anchor="first" />
      <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
    </action>
  </actions>

</idea-plugin>