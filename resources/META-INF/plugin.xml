<idea-plugin url="https://github.com/asiaon123/ReviewBoard-Plugin-For-IntelliJ-IDEA">
    <id>com.guyazhou.tools.plugin.reviewboard4intellij</id>
    <name>Review Board Support(IDEA <![CDATA[<]]> 2018)</name>
    <version>1.5</version>
    <category>TOOLS INTEGRATION</category>
    <vendor email="asiaon123@gmail.com" url="http://www.guyazhou.com">asiaon123</vendor>
    <idea-version since-build="145.0"/>

    <depends>Subversion</depends>
    <depends>Git4Idea</depends>

    <description><![CDATA[
        <h4>Note:</h4>
        <ul>
            <li><span style="color: red;">The version 1.x ONLY support IDEA that version is less than 181.2218(IDEA 2018)</span> </li>
            <li>Due to compability issue of official API, `Review Board Support` will be available for IDEA 2018 and later</li>
        </ul>
        <h4>Features:</h4>
        <ul>
            <li>Support Subversion, Git</li>
            <li>Auto review for users@lvmama</li>
        </ul>
        <h4>About:</h4>
        <ul>
            <li><a href="https://github.com/asiaon123/ReviewBoard-Plugin-For-IntelliJ-IDEA/blob/master/README.md">Usage</a></li>
            <li><a href="https://github.com/asiaon123/ReviewBoard-Plugin-For-IntelliJ-IDEA/issues">Issues</a></li>
            <li><a href="https://github.com/asiaon123/ReviewBoard-Plugin-For-IntelliJ-IDEA/tree/1.x">Source</a></li>
        </ul>
        <h4>Thanks:</h4>
        <ul>
            <li>@kaneg supports basic code</li>
        </ul>
    ]]>
    </description>

    <change-notes><![CDATA[
        <h4>1.5</h4>
            <ol>
                <li>Add suppourt for Git</li>
            </ol>
        <h4>1.4</h4>
            <ol>
                <li>Archive 1.x</li>
                <li>1.x only suppourt IDEA that version is less than 181.2218(2018)</li>
                <li>Add image to commit action</li>
            </ol>
        <h4>1.3</h4>
            <ol>
                <li>Some ui changes</li>
                <li>Available for plugin repository</li>
            </ol>
        <h4>1.2</h4>
            <ol>
                <li>Fix authentication issue for review board version 2.5+</li>
                <li>Chang auto review trigger code to `ar`</li>
                <li>Support post action support in both editor view and project view</li>
            </ol>
        <h4>1.1.1</h4>
            <ol>
                <li>Bug fix and some optimizations</li>
                <li>Auto review trigger code is changing to "bang"</li>
            </ol>
        <h4>1.1.0</h4>
            <ol>
                <li>"Bang" function online now(for some users@lvmama)</li>
            </ol>
        <h4>1.0.0</h4>
            <ol>
                <li>First release</li>
            </ol>
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.guyazhou.tools.plugin.reviewboard.setting.ReviewBoardSetting"/>
        <applicationConfigurable instance="com.guyazhou.tools.plugin.reviewboard.setting.ReviewBoardSetting"/>
    </extensions>

    <actions>
        <action id="ReviewAction"
                class="com.guyazhou.tools.plugin.reviewboard.action.ReviewAction"
                text="Pre-commit"
                icon="/icons/logo.png"
                description="Pre-commit action">
            <add-to-group group-id="ChangesViewPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>